#include <iostream>
//###INSERT CODE HERE -
#include <bits/stdc++.h>
using namespace std;

void hinhVuong_2(){
    int n;
    cin >> n;
        if (n<3 || n>20){
            cout << "Khong thoa dk ";
        }
        else
        for (int i=0; i<n; i++){
            for (int j=0; j<n; j++){
                if (i==0 || i==n-1 || j==0 || j==n-1)
                    cout << "* ";
                else
                    cout << "  ";
            }
            cout << endl;
        }
}

int main(){
    hinhVuong_2();
    return 0;
}
